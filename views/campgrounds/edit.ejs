<% include ../partials/header.ejs %>
<div class="container">
    <h1 style="text-align: center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">

            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">

                <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input type="text" name="campground[name]" id="name" placeholder="Name" class="form-control" value="<%= campground.name %>" >
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" name="campground[price]" id="price" placeholder="Price" value="<%= campground.price %>" class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="text" name="campground[image]" id="image" placeholder="Image URL" class="form-control" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" name="campground[description]" id="description" placeholder="Description" class="form-control" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <!--THE LOCATION IS HANDELED SEPERATELY SO WE SHOULD NOT PUT IT IN campground[location]-->
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>

            </form>

            <a href="/campgrounds">Back to campgrounds</a>
        </div>

</div>

<% include ../partials/footer.ejs %>