<% include ../partials/header.ejs %>
<div class="container">
    <h1 style="text-align: center">Create New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">

            <form action="/campgrounds" method="POST">

                <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input type="text" name="name" placeholder="Name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>                    
                    <input type="number" name="price" placeholder="Price" class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="text" name="image" placeholder="Image URL" class="form-control">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>                
                    <input type="text" name="description" placeholder="Description" class="form-control">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Example: Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>

            </form>

            <a href="/campgrounds">Back to campgrounds</a>
        </div>

</div>

<% include ../partials/footer.ejs %>